{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/prettier",
    "plugin:prettier/recommended",
    "plugin:react-hook-form/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint","react-hook-form"],
  "rules": {
    "react/button-has-type": "off",
    "react/jsx-filename-extension": ["warn", { "extensions": [".tsx"] }],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ],"react/function-component-definition":[
      2, 
      { "namedComponents": [
        "arrow-function", 
        "function-declaration"
      ] }
    ],
    "eslint-plugin-import/prefer-default-export": "off",
    "import/prefer-default-export": "off",
    "react-hook-form/destructuring-formstate": "error"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
